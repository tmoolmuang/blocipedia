<h2>All Users</h2>
<div class="row">
  <div class="col-md-8">
    <% @users.each do |user| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <% unless user.name.nil? || user.name.empty? %>
              <%= user.name %> - 
            <% end %>
            <%= user.email %> 
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
