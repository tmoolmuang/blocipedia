<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Edit Wiki</h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <p>Guidelines for wikis</p>
        <ul>
          <li>Make sure it rhymes.</li>
          <li>Crowd-funding campaign is not permitted.</li>
          <li>The incessant use of hashtags will get you banned.</li>
        </ul>
      </div>
      <div class="col-md-8">
        <%= form_for @wiki do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
          </div>
          <%= render partial: 'form', locals: { f: f } %>
          <%= render partial: 'collaborators/form', locals: { f: f, collaborators: @wiki.collaborators } %>
          <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
