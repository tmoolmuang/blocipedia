<h2>All Wikis</h2>
<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <% if (!wiki.private) or (wiki.private and current_user.present? and (current_user.premium? or current_user.admin?))  %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %> 
            <% if wiki.private %>
              <small><i> - private</i></small>
            <% end %>
          </h4>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <% if user_signed_in? %> 
    <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
